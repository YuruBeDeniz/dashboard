{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",               
    "outDir": "./dist",                 
    "strict": true,                  
    "moduleResolution": "NodeNext",
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": ["**/*", "types/**/*"],                  
  "exclude": ["node_modules"]           
}
  