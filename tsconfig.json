{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",               
    "outDir": "./dist",                 
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["**/*", "types/**/*"],                  
  "exclude": ["node_modules"]           
}
  